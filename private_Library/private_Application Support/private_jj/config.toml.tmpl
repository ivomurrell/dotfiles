[user]
name = "Ivo Murrell"
email = "{{ .email }}"

[ui]
default-command = "log"
pager = "less -RF --mouse"
show-cryptographic-signatures = true

[signing]
behavior = "drop"
backend = "ssh"
key = {{ .keyfile | toToml }}
backends.ssh.allowed-signers = "~/.ssh/allowed_signers"

[git]
push-new-bookmarks = true
sign-on-push = true

[template-aliases]
'short_description' = '''
description.first_line().remove_prefix('feat: ').remove_prefix('fix: ')
'''
'truncate_length' = '29'
'truncated_description' = '''
truncate_end(truncate_length, short_description) ++ if(short_description.len() > truncate_length, 'â€¦')
'''
